@model Eprocurement.Compras.Models.UsuarioModel
@{
    ViewBag.Title = "Bienvenido";
   Layout = null;
}

<link href="~/Content/Styles/Login.css" rel="stylesheet" />


<div class="background row" style="padding-bottom: 0px;">
    <div class="col-sm-7">
        &nbsp;
        <h1 class="title">PORTAL<br /> INTERNO PARA EMPLEADOS</h1>
    </div>
    <div class="col-sm-5 containerLogin">
        @using (Html.BeginForm("Login", "SeguridadAD", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row pb-0">
                <div class="col-sm-12">
                    <br /><br /><br /><br /><br /><br /><br />
                    <h3 class="subtitle">
                        Inicia sesión
                    </h3>
                </div>
            </div>

            <div class="formPrincipal">
                <div class="row login-user">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-8">
                        <div class="inputIF">
                            @Html.LabelFor(model => model.NombreUsuario, new { @class = "labelTexto control-label" })
                        </div>
                        <div class="inputIF">
                            @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control inputIF" })
                        </div>
                    </div>
                </div>

                <div class="row login-pass">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-8">
                        <div class="inputIF" style="display:none">
                            @Html.LabelFor(model => model.Password, new { @class = "labelTexto control-label" })
                        </div>
                        <div class="inputIF">
                            <label class="labelTexto control-label">Contraseña</label>
                        </div>
                        <div class="inputIF">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control inputIF txt-pass" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8" style="text-align:center">
                        <div class="mt-2">
                            @ViewBag.Error
                        </div>
                       
                    </div>
                </div>





                <div class="row mt-4">
                    <div class="col-sm-2">&nbsp;</div>
                    <div class="col-sm-8">
                        @* <input type="button" value="Siguiente" class="btnStyle btn-radius btn-next" onClick="LoginSiguiente()" />*@
                        <input type="submit" value="Ingresar" class="btnStyle btn-radius btn-fin" />
                    </div>
                    <div class="col-sm-2">&nbsp;</div>
                </div>
            </div>

        }
    </div>
</div>


<script type="text/javascript">
    var LoginSiguiente = function () {
        $(".btn-next").hide();
        $(".login-user").hide();

        $(".btn-fin").show();
        $(".login-pass").show();

        $(".txt-pass").focus();
    }
</script>